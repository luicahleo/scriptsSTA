<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
  <!-- Servlets utilizados -->
  <servlet>
    <servlet-name>Saludo</servlet-name>
    <servlet-class>Saludo</servlet-class>
  </servlet>

  <!-- Mapeado de los servlets con las direcciones URL a que atienden y corresponden -->
  <servlet-mapping>
    <servlet-name>Saludo</servlet-name>
    <url-pattern>/servlets/Saludo</url-pattern>
  </servlet-mapping>
  
</web-app>
